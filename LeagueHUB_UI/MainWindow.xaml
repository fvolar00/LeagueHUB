<Window x:Class="LeagueHUB_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeagueHUB_UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="AddMatchBtn" Content="Add match" HorizontalAlignment="Left" Margin="52,96,0,0" VerticalAlignment="Top" Height="33" Width="98" Click="Button_Click" FontSize="18"/>
        <DataGrid x:Name="Table" d:ItemsSource="{d:SampleData ItemCount=4}" Margin="313,24,26,233" SelectionChanged="Table_SelectionChanged" SelectedIndex="1"/>
        <Button Content="Add team" HorizontalAlignment="Left" Margin="52,50,0,0" VerticalAlignment="Top" FontSize="18" Width="98" Click="Button_Click_1"/>
        <Button x:Name="AddReferee" Content="Add referee" HorizontalAlignment="Left" Margin="52,150,0,0" VerticalAlignment="Top" Height="33" Width="98" FontSize="18" Click="AddReferee_Click"/>
        <Button x:Name="RefreshBtn" Content="Refresh" HorizontalAlignment="Left" Margin="675,217,0,0" VerticalAlignment="Top" FontSize="22" Click="RefreshBtn_Click"/>
    </Grid>
</Window>
