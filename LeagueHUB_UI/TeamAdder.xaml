<Window x:Class="LeagueHUB_UI.TeamAdder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeagueHUB_UI"
        mc:Ignorable="d"
        Title="TeamAdder" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="teamName" HorizontalAlignment="Left" Margin="391,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181" FontSize="22"/>
        <TextBox x:Name="coachName" HorizontalAlignment="Left" Margin="391,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181" FontSize="22" />
        <Label Content="Team name" HorizontalAlignment="Left" Margin="208,100,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Label Content="Coach name" HorizontalAlignment="Left" Margin="205,178,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="343,301,0,0" VerticalAlignment="Top" FontSize="22" Width="100" BorderBrush="#00000000" Background="#FF71DF74" Click="Button_Click"/>

    </Grid>
</Window>
